{
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                    "node": "current"
                }
            }
        ]
    ],
    "sourceMaps": true,
    "retainLines": true,
    "plugins": [
        [
            "module-resolver",
            {
                "root": ["./src"],
                "alias": {
                    "@routes": "./src/routes",
                    "@controllers": "./src/controllers",
                    "@models": "./src/models",
                    "@middlewares": "./src/middlewares",
                    "@utils": "./src/utils",
                    "@services": "./src/services"
                }
            }
        ]
    ]
}
